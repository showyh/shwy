<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 对应dao接口 -->
<mapper namespace="shwy.tk.dao.MusicDAO">

    <resultMap id="musicResultMap" type="shwy.tk.pojo.po.MusicPO">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="singer" property="singer" jdbcType="VARCHAR"/>
        <result column="src" property="src" jdbcType="VARCHAR"/>
        <result column="img" property="img" jdbcType="VARCHAR"/>
        <result column="lrc" property="lrc" jdbcType="VARCHAR"/>
        <result column="time" property="time" jdbcType="VARCHAR"/>

    </resultMap>

    <sql id="listPO">
         dan,img,singer,src,name,id,time,lrc
    </sql>

    <select id="musicPO" resultMap="musicResultMap" parameterType="Map">
        select
        <include refid="listPO"/>
        from music where dan=#{dan}
    </select>

    <!--<select id="listAllMusic" resultType="musicResultMap" parameterType="Map">
        select
        <include refid="listPO"/>
        from music
    </select>-->

    <select id="getMusicCount" resultType="Long" parameterType="Map">
        select count(*) from music
    </select>

    <select id="getMusic" resultMap="musicResultMap">
        select * from music where id=#{id}
    </select>
   <!-- <insert id="addMusic" parameterType="shwy.tk.pojo.po.MusicPO">
        insert into music
        values(null,#{name},#{singer},#{dan},#{src},#{lrc},#{img},#{time})
    </insert>

    <update id="updateMusic" parameterType="shwy.tk.pojo.po.MusicPO">
        update music set
        name=#{name},singer=#{singer},dan=#{dan},src=#{src},lrc=#{lrc},img=#{img},time=#{time}
        where id=#{id}
    </update>-->

    <delete id="deletePhoto" parameterType="Integer">
        delete from photo where id = #{id}
    </delete>

</mapper>